include partials/header.pug
body 
    include partials/navbar.pug
    .container 
        .row.mt-5
            .col-lg-4.mr-auto
                form(action="/signup", method="post")
                    .alert
                    .form-group.mb-4
                        h2 Sign Up
                    .form-group.mb-2
                        input.form-control(type="email",id="email", name="email", placeholder="Email")
                    .form-group.mb-2
                        input.form-control(type="text",id="username", name="username", placeholder="Username")
                    .form-group.mb-4
                        input.form-control(type="password",id="password", name="password", placeholder="Password")
                    .form-group.mb-2
                        button.btn.btn-dark.btn-block(id="signupBtn") Sign Up
    include partials/footer.pug